#!/usr/bin/env bash
#this scrip install and cofigure a NGINX web server.
apt-get -y update
apt-get -y install nginx
sudo service ngninx start

echo "Holberton School" > /var/www/html/index.nginx-debian.html

set_301="\\\tlocation  /redirect_me {\n\t\treturn 301 https://www.youtube.com;\n\t}\n"

sudo sed -i "38i $set_301" /etc/nginx/sites-available/default
sudo service nginx restart
